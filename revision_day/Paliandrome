#First thought
a = input("Enter any string : ")
b = ''.join(reversed(a))

if a == b :
  print("The string is a palindrome")
else:
  print("String is not a palindrome")  

#Easy-one
a = input("Enter anything")
if a=a[::-1]:
  print("Paliandrome")
else :
 print("not a paliandrome")

#improved one
a = input("Enter any string : ")
a =a.lower()
a = a.replace(" ","")
b = ''.join(reversed(a))

if a == b :
  print("The string is a palindrome")
else:
  print("String is not a palindrome")  
